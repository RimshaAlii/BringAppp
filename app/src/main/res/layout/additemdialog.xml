<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/additemdialoglayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/dialog_background"
    android:padding="20dp"
    android:orientation="vertical">
    <AutoCompleteTextView
        android:id="@+id/itemnamee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Item Name"
        android:fontFamily="@font/croissant_one"
        android:textColor="@color/Brown"
        android:dropDownAnchor="@id/dropdown_menu"
        android:completionHint="Item Name"
        android:completionThreshold="1"
        android:popupBackground="@color/White">
    </AutoCompleteTextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dropdown_menu"
        android:paddingBottom="10dp">

    </TextView>

    <EditText
        android:id="@+id/itemprice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemnamee"
        android:hint="Item Price"
        android:fontFamily="@font/croissant_one"
        android:textColor="@color/Brown"></EditText>
    <EditText
        android:id="@+id/itemquantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemprice"
        android:hint="Item Quantity(Optional)"
        android:fontFamily="@font/croissant_one"
        android:textColor="@color/Brown"></EditText>
</LinearLayout>